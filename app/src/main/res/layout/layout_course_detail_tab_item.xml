<?xml version="1.0" encoding="utf-8"?>
<com.youxing.duola.course.views.CourseDetailTabItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/text_blue"
            android:text="课程介绍"/>

        <TextView
            android:id="@+id/tab_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/text_deep_gray"
            android:text="购买须知"/>

        <TextView
            android:id="@+id/tab_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/text_deep_gray"
            android:text="用户评价"/>

    </LinearLayout>

    <View
        android:id="@+id/tab_bottom_shape"
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:background="@color/app_theme"
        android:layout_gravity="bottom"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_image"
        android:layout_gravity="bottom"/>

</com.youxing.duola.course.views.CourseDetailTabItem>