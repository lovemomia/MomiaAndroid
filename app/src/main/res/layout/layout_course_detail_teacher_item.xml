<?xml version="1.0" encoding="utf-8"?>
<com.youxing.duola.course.views.CourseDetailTeacherItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">
    
    <LinearLayout
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        
        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/app_theme"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_deep_gray"
            android:singleLine="true"
            android:text="专业讲师"
            android:textStyle="bold"
            android:textSize="@dimen/text_medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.youxing.common.views.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:civ_border_color="@color/bg_section"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_deep_gray"
                android:singleLine="true"
                android:text="许巍"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:id="@+id/education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light_gray"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="yyyy"
                android:textSize="@dimen/text_small"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="2dp"
        android:lineSpacingMultiplier="1.2"
        android:text="yyyy"
        android:textSize="@dimen/text_small"/>

</com.youxing.duola.course.views.CourseDetailTeacherItem>