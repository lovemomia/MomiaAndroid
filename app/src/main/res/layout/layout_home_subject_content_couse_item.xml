<?xml version="1.0" encoding="utf-8"?>
<com.youxing.duola.home.views.HomeSubjectContentCourseItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:layout_weight="1">

        <com.youxing.common.views.CircularImage
            android:id="@+id/icon"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小小牙医"
            android:maxLength="6"
            android:textColor="@color/text_deep_gray"
            android:textSize="@dimen/text_medium"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-5岁"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_small"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200人已参加"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_small"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"/>

</com.youxing.duola.home.views.HomeSubjectContentCourseItem>