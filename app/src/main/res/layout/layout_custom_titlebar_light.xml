<?xml version="1.0" encoding="utf-8"?>
<com.youxing.duola.views.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white">
    <TextView
        android:id="@android:id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/text_large"
        android:textColor="@color/text_blue"/>

    <com.youxing.duola.views.TitleBarButton
        android:id="@+id/title_left_btn"
        android:layout_height="match_parent"
        android:layout_width="60dp"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/bg_action_button_light">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/text_medium"
            android:layout_gravity="center"/>

    </com.youxing.duola.views.TitleBarButton>

    <com.youxing.duola.views.TitleBarButton
        android:id="@+id/title_right_btn"
        android:layout_height="match_parent"
        android:layout_width="60dp"
        android:layout_gravity="right|center_vertical"
        android:padding="10dp"
        android:background="@drawable/bg_action_button_light">

        <ImageView
            android:id="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/text_medium"
            android:layout_gravity="center"/>

    </com.youxing.duola.views.TitleBarButton>

    <include layout="@layout/layout_divider"
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"/>
</com.youxing.duola.views.TitleBar>