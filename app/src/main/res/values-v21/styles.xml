<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="android:colorPrimary">@color/white</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="android:colorPrimaryDark">@color/white</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="android:colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/app_theme</item>
        <item name="android:textColorPrimary">@color/text_deep_gray</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="android:checkboxStyle">@style/CustomCheckBox</item>

        <item name="android:windowBackground">@color/bg_window</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="android:colorPrimary">@color/white</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="android:colorPrimaryDark">@color/white</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="android:colorAccent">@color/app_theme</item>
        <item name="android:statusBarColor">@color/app_theme</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <item name="actionBarStyle">@style/MyActionBar.Dark</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="android:checkboxStyle">@style/CustomCheckBox</item>
    </style>

</resources>