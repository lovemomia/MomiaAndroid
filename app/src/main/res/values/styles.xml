<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Black">
        <!-- Customize your theme here. -->
        <!--<item name="android:actionBarItemBackground">@android:color/holo_blue_bright</item>-->
        <!--<item name="actionBarItemBackground">@android:color/holo_blue_bright</item>-->

        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:listViewStyle">@style/CustomListView</item>

        <item name="android:windowTitleSize">45dip</item>item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowBackground">@color/bg_window</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/bg_app_theme</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/bg_app_theme</item>
        <item name="android:background">@color/bg_app_theme</item>
    </style>

    <style name="CustomListView" parent="android:Widget.ListView">
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@drawable/bg_divider</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TabBarItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/tv_tabbar_item</item>
    </style>

</resources>
