<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/app_theme</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/app_theme</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/white</item>

        <item name="android:windowContentOverlay">@color/bg_divider</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="android:checkboxStyle">@style/CustomCheckBox</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/bg_window</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/white</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/white</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/app_theme</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <item name="android:windowContentOverlay">@color/bg_divider</item>
        <item name="actionBarStyle">@style/MyActionBar.Dark</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="android:checkboxStyle">@style/CustomCheckBox</item>
    </style>

    <style name="MyActionBar" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">1dp</item>
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.Dark" parent="@style/Widget.AppCompat.ActionBar">
        <item name="elevation">1dp</item>
        <item name="background">@color/app_theme</item>
        <item name="android:background">@color/app_theme</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle.Dark</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_deep_gray</item>
    </style>

    <style name="MyActionBar.TitleTextStyle.Dark" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomListView" parent="android:Widget.ListView">
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@drawable/bg_divider</item>
    </style>

    <style name="CustomCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_custom_checkbox</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TabBarItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/tv_tabbar_item</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
